<Window x:Class="PDFSuperTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Super Tool C#" Height="600" Width="650" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl Margin="10,10,10,40">
            <TabItem Header="✂️ Separar PDF">
                <StackPanel Margin="20">
                    <TextBlock Text="PDF a Separar:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPathSplit" Margin="0,5" Padding="5" IsReadOnly="True"/>
                    <Button Content="📁 Buscar Archivo..." Click="BtnSeleccionar_Click" Height="30"/>

                    <Border Background="#F0F0F0" Margin="0,30,0,0" Padding="15" CornerRadius="5">
                        <StackPanel>
                            <Button Content="EXECUTAR SEPARACIÓN" Background="#CF380A" Foreground="White" 
                                    FontWeight="Bold" Height="40" Click="BtnSeparar_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>

            <TabItem Header="🔗 Unir PDF">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Lista de archivos para combinar:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ListBox x:Name="listArchivosUnir" Grid.Row="1" Margin="0,0,0,10" DisplayMemberPath=""/>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="➕ Agregar" Click="BtnAgregarALista_Click" Margin="5" Width="100" Height="35"/>
                        <Button Content="❌ Limpiar" Click="BtnLimpiar_Click" Margin="5" Width="100" Height="35"/>
                        <Button Content="UNIR AHORA" Click="BtnUnir_Click" Background="Orange" FontWeight="Bold" 
                                Margin="5" Width="120" Height="35"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="📄 Convertir">
                <StackPanel Margin="20">
                    <TextBlock Text="Seleccionar PDF para convertir:" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtPathConvert" Padding="5" IsReadOnly="True" VerticalContentAlignment="Center"/>
                        <Button Grid.Column="1" Content="📁 Buscar..." Click="BtnSeleccionarConvert_Click" Width="80" Margin="5,0,0,0"/>
                    </Grid>

                    <Border BorderBrush="#DDD" BorderThickness="1" Padding="20" CornerRadius="8">
                        <StackPanel>
                            <CheckBox x:Name="chkEsExcel" Content="Convertir a EXCEL (.xlsx)" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="Si no marcas la casilla, se convertirá a WORD (.docx)" 
                                       FontStyle="Italic" Foreground="Gray" Margin="20,0,0,20"/>
                            <Button Content="CONVERTIR" Click="BtnConvertir_Click" 
                        Background="#2B579A" Foreground="White" FontWeight="Bold" Height="45"/>
                            <TextBlock Text="Nota: Requiere tener instalado Word/Excel en este equipo." 
                               Margin="0,15,0,0" Foreground="#888" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>

        <StatusBar VerticalAlignment="Bottom" Height="30">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Estado: " FontWeight="Bold"/>
                    <TextBlock x:Name="lblStatus" Text="Listo." />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>